    <!-- Google Login -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>


    <!-- css -->
    <link href="/css/login.css" rel="stylesheet">



</head>

<body>
    <div class="login container grid" id="loginAccess">
        <!-- login -->
        <div class="text-item">
            <a href="/">
                <img src="/image/Logo.png" alt="logo" class="logo">
            </a>
            <h2>WELCOME! <br><span>
                    IT'S AN ICE CREAM<br>
                    FOR KIDS FROM 0<br>
                    TO 100 YEARS<br>
                    OLD.
                </span></h2>
        </div>

        <div class="section">
            <h1 class="title">Login</h1>
            <div class="item">
                
                <form method="post" action="/login" class="login-form">
                    <div class="login-content grid">
                        <!-- email -->
                        <div class="form-group">
                            <input type="email" id="email" name="email" required placeholder=" " class="form-input">
                            <label for="email" class="label">&emsp;Email</label>
                        </div>
                        <!-- password -->
                        <div class="form-group">
                            <input type="password" id="password" name="password" required placeholder=" "
                                class="form-input">
                            <label for="password" class="label">&emsp;Password</label>

                            <i class="ri-eye-off-fill login-icon login-password" id="loginPassword"></i>
                        </div>
                    </div>
                    <button type="submit" class="btn">Login</button>
                </form>
                <% if (typeof error !== 'undefined') { %>
                    <p style="color: red;"><%= error %></p>
                <% } %>
             

                <div class="social">
                    <p class="social-title">Or login with</p>

                    <div class="social-links">
                        <a href="/login/google" class="social-link google-login" id="google-login">
                            <img src="/image/icon-google.png" alt="Google Login" class="social-img">
                        </a>
                    </div>
                </div>

                <p class="switch">
                    Don't have an account?
                    <a href="/register"><button id="loginBtnRegister">Create Account</button></a>
                </p>

            </div>
        </div>

        
    </div>


    <script>
        // show hide pass login
        const passwordAccess = (loginPass, loginEye) => {
            const input = document.getElementById(loginPass),
                iconEye = document.getElementById(loginEye)

            iconEye.addEventListener('click', () => {
                // change password to text
                input.type === 'password' ? input.type = 'text'
                    : input.type = 'password'

                // change icon
                iconEye.classList.toggle('ri-eye-fill')
                iconEye.classList.toggle('ri-eye-off-fill')
            })
        }
        passwordAccess('password', 'loginPassword')

