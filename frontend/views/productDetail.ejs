<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product page</title>
    <link rel="icon" href="../../public/image/Logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!--css-->
    <link href="/css/productDetail.css" rel="stylesheet">

    <!-- link icon -->
    <link rel="stylesheet" data-purpose="Layout StyleSheet" title="Web Awesome"
        href="/css/app-wa-8d95b745961f6b33ab3aa1b98a45291a.css?vsn=d">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-solid.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-regular.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-light.css">

</head>

<body>
    <% 
        productdetails  = typeof productdetails  !== 'undefined' ? productdetails  : []; 
    %>
    <!--header-->

    <nav class="navbar navbar-expand-sm navbar-header container-fluid" style="z-index: 1050; position: relative;">
        <a class="navbar-brand" href="#" style="font-weight: 700; font-size: 50px; color: #7c4c2c;">
            <img src="/image/Logo.png" alt="logo" style="width: 90px;">
            GELADO
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa-sharp fa-solid fa-circle-user fa-2xl"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!--view product-->
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 mt-5 mb-5">
                <img class="imageDetail" src="<%= productdetails.image_url %>">
                <p class="price">
                    <i class="fa-solid fa-tags"></i>
                    <%= productdetails.base_price %>
                </p>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12 mt-5 mb-5">
                <div class="card boxInformation">
                    <div class="card-body">
                        <h2 class="card-title"><%= productdetails.name %></h2>
                        <p class="card-text">
                            <b>Product Description: </b><%= productdetails.description %>
                        </p>
                        <p><b>Type: </b><%= productdetails.category_name %></p>
                        <p><b>Stock: </b><%= productdetails.stock %></p>
                        <p><b>Size: </b><%= productdetails.size %></p>
                        <p><b>Flavor: </b><%= productdetails.color %></p>
                        <form method="POST" action="/cart/addCart">
                            <input type="hidden" name="product_id" value="<%= productdetails.product_id %>">
                            <button type="submit" class="btn btn-cart">Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="solid"></div>
    </div>

    <!--comment-->
    <div class="container mt-5">
        <h3 style="color: #7c4c2c;">Reviews</h3>
        <div class="commentBox">
            <% if (reviews.length > 0) { %>
                <% reviews.forEach(review => { %>
                    <p class="mt-3">&emsp;<b><%= review.username %></b> &emsp;<small><%= new Date(review.created_at).toLocaleString() %></small></p>
                    <p class="ml-5"><%= review.comment %></p>
                    <p class="ml-5 text-muted"></p>
                    <div class="solid"></div>
                <% }); %>
            <% } else { %>
                <p class="text-muted" style="padding: 0.8rem; padding-left: 2rem;">No reviews yet.</p>
            <% } %>
        </div>
    </div>    

    <!--footer-->
    <div class="jumbotron text-center footer" style="margin-bottom:0">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <a class="navbar-brand" href="#" style="font-weight: 700; font-size: 30px; color: #7c4c2c;">
                    <img src="/image/Logo.png" alt="logo" style="width: 120px;">
                    GELADO
                </a>
                <div class="row">
                    <button class="btn btn-signin">Sign in</button>
                    <button class="btn btn-signin mr-auto ml-1">Sign up</button>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 mt-2">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-duotone fa-solid fa-house fa-lg ml-auto mr-3"></i>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-duotone fa-solid fa-ice-cream fa-lg ml-auto mr-3"></i>
                            Product
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-solid fa-cart-shopping fa-lg ml-auto mr-3"></i>
                            Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-light fa-user fa-lg ml-auto mr-3"></i>
                            Account
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 mt-2">
                <h3 style="color: #7c4c2c;">Contact</h3>
                <ul class="nav flex-column">
                    <li class="nav-item ml-auto mr-4">
                        <a class="nav-link" href="#">
                            <i class="fa-duotone fa-solid fa-location-dot"></i>
                            19 Nguyen Huu Tho street, Tan Phong ward, District 7, HCM city
                        </a>
                    </li>
                    <li class="nav-item mr-auto ml-2">
                        <a class="nav-link" href="#">
                            <i class="fa-solid fa-phone-office"></i>
                            (028)37 755 035
                        </a>
                    </li>
                    <li class="nav-item mr-auto ml-2">
                        <a class="nav-link text-center" href="#">
                            <i class="fa-solid fa-envelope"></i>
                            gelado@gmail.com
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</body>

</html>