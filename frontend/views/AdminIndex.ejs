<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="icon" href="/image/Logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--chart-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!--css-->
    <link href="/css/adminIndex.css" rel="stylesheet">

    <!-- link icon -->
    <link rel="stylesheet" data-purpose="Layout StyleSheet" title="Web Awesome"
        href="/css/app-wa-8d95b745961f6b33ab3aa1b98a45291a.css?vsn=d">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/all.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-solid.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-regular.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.0/css/sharp-light.css">
</head>

<style>
    /* Styling for the chart container */
    .chart-container {
        width: 80%;
        margin: 0 auto;
        padding-top: 50px;
    }
</style>

<body>
    <% 
        customerCount = typeof customerCount !== 'undefined' ? customerCount : []; 
    %>
    <div class="container-fluid"></div>
        <div class="row">
            <!--sidebar-->
            <div class="col-2 sidebar">
                <div class="headerLogo">
                    <div class="imageLogo mb-5">
                        <a class="navbar-brand" href="#">
                            <img src="/image/Logo.png" alt="logo" style="width: 80px;">
                        </a>
                        <p style="font-size: large;" class="dash-title"><b>Admin Dashboard</b></p>
                    </div>

                    <div class="selection">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">
                                    <i class="fa-solid fa-chart-line"></i>
                                    <span class="nav-text">Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/manageProduct">
                                    <i class="fa-regular fa-ice-cream"></i>
                                    <span class="nav-text">Product Management</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/manageOrder">
                                    <i class="fa-solid fa-send-backward"></i>
                                    <span class="nav-text">Order Management</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/manageUser">
                                    <i class="fa-regular fa-user"></i>
                                    <span class="nav-text">User Management</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/manageCoupon">
                                    <i class="fa-regular fa-ticket"></i>
                                    <span class="nav-text">Coupon Management</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/signout">
                                    <i class="fa-regular fa-circle-user"></i>
                                    <span class="nav-text">Signout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!--total number-->
            <div class="col-10">
                <div class="content">
                    <div class="row mt-3">
                        <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                            <div class="card">
                                <div class=" text-center usercircle">
                                    <div class="card-body users">
                                        <h5>Users</h5>
                                        <p>
                                            <i class="fa-regular fa-user"></i>
                                            <%= customerCount %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                            <div class="card">
                                <div class=" text-center ordercircle">
                                    <div class="card-body users">
                                        <h5>Orders</h5>
                                        <p>
                                            <i class="fa-solid fa-send-backward"></i>
                                            100
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                            <div class="card">
                                <div class=" text-center revenuecircle">
                                    <div class="card-body users">
                                        <h5>Revenue</h5>
                                        <p>
                                            <i class="fa-regular fa-money-bill"></i>
                                            100,000
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--chart-->
                    <div class="chart-container">
                        <canvas id="bestSellerChart"></canvas>
                    </div>

                    <script>
                        // Data for the best-selling products
                        const ctx = document.getElementById('bestSellerChart').getContext('2d');
                        const bestSellerChart = new Chart(ctx, {
                            type: 'bar', // Type of chart
                            data: {
                                labels: ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'], // Product names
                                datasets: [{
                                    label: 'Best Seller',
                                    data: [120, 150, 90, 180, 70], // Sales numbers for each product
                                    backgroundColor: '#abfff2', // Bar color
                                    borderColor: '#abfff2',
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                responsive: true,
                                scales: {
                                    y: {
                                        beginAtZero: true, // Start y-axis from 0
                                    }
                                }
                            }
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</body>

</html>