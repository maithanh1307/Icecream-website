    <!--product-->
    <div class="container">
        <div class="mt-5 mb-5">
            <div class="row">
                <!--search, filter, catalog, price-->
                <div class="col-lg-4 col-md-3 col-sm-12">
                    <!--search-->
                    <div class="searchBox">
                        <form action="/product/searchProduct" method="get" class="form-inline">
                            <div class="row">
                                <!-- Đảm bảo rằng ô input có thuộc tính name="search" -->
                                <input type="text" name="search" class="form-control inputSearch" placeholder="Search..." id="search" value="<%= searchQuery || '' %>">
                                <button type="submit" class="btnSearch">
                                    <i class="fa-solid fa-magnifying-glass fa-md" style="color: #7c4c2c;"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    

                    <!--catalog-->
                    <div class="filterBox mt-5">
                        <h2 class="text-center" style="font-weight: 800; color: #7c4c2c;">
                            Catalog
                        </h2>
                        <form action="/action_page.php">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">Ice cream cone
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">Cream with topping
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">Cream jar
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">Ice cream
                                </label>
                            </div>

                            <button type="submit" class="btn btnChoose mt-3 mb-3 mr-auto ml-2">Choose</button>
                        </form>
                    </div>

                    <!--filter-->
                    <div class="filterBox mt-5">
                        <h2 class="text-center" style="font-weight: 800; color: #7c4c2c;">
                            <i class="fa-solid fa-filter"></i>
                            Filter
                        </h2>
                        <form action="/action_page.php">
                            <div class="flavor">
                                <h5 class="ml-2">Flavors</h5>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Strawberry
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio2">
                                        <input type="checkbox" class="form-check-input" value="">Mint
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Chocolate
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Lemon
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Vani
                                    </label>
                                </div>
                            </div>
                            <div class="filterSize">
                                <h5 class="ml-2">Sizes</h5>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Small
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio2">
                                        <input type="checkbox" class="form-check-input" value="">Medium
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label" for="radio1">
                                        <input type="checkbox" class="form-check-input" value="">Large
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btnChoose mt-3 mb-3 mr-auto ml-2">Choose</button>
                        </form>
                    </div>

                    <!--sorting-->
                    <div class="filterBox mt-5">
                        <h2 class="text-center" style="font-weight: 800; color: #7c4c2c;">
                            Sorting by
                        </h2>
                        <form action="/action_page.php">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">Best seller
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="optradio">New products
                                </label>
                            </div>
                            <div class="form-group form-inline">
                                <label for="sel1">Prices:</label>
                                <select class="form-control ml-2" id="sel1">
                                    <option>Ascending</option>
                                    <option>Descending</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btnChoose mt-3 mb-3 mr-auto ml-2">Choose</button>
                        </form>
                    </div>
                </div>

                <!--view product-->
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <!--list, grid-->
                    <div style="position: relative;" class="mt-5 mb-5">
                        <div class="icon-for-view">
                            <div class="row">
                                <i class="fa-solid fa-list fa-xl mr-3" onclick="viewBy('list')"></i>
                                <i class="fa-solid fa-grid-2 fa-xl" onclick="viewBy('grid')"></i>
                            </div>
                        </div>
                    </div>

                    <!--grid-->
                    <div id="gridView">
                        <div class="row">
                            <% userproducts.forEach(product => { %>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    <div class="card" style="margin-top: 80px;">
                                        <img class="card-img-top imageCard" src="<%= product.image_url %>" alt="Card image"
                                            style="width:100%">
                                        <div class="card-body">
                                            <h4 class="card-title">
                                                <%= product.name %>
                                            </h4>
                                            <p class="card-text">
                                                <%= product.description %>. <a href="">View more</a>
                                            </p>
                                            <p class="price">
                                                <i class="fa-solid fa-tags"></i>
                                                <%= product.base_price %>
                                            </p>
                                            <button class="btn btn-cart">Add to cart</button>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>

                            <!--search show-->
                            <% if (productSearch.length > 0) { %>
                                <% productSearch.forEach(product => { %>
                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                        <div class="card" style="margin-top: 80px;">
                                            <img class="card-img-top imageCard" src="<%= product.image_url %>" alt="Card image" style="width:100%">
                                            <div class="card-body">
                                                <h4 class="card-title"><%= product.name %></h4>
                                                <p class="card-text"><%= product.description %>. <a href="">View more</a></p>
                                                <p class="price">
                                                    <i class="fa-solid fa-tags"></i>
                                                    <%= product.base_price %>
                                                </p>
                                                <button class="btn btn-cart">Add to cart</button>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>

                            
                        </div>
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="/product?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>

                    </div>

                    <!--list-->
                    <div id="listView" style="display: none;">
                        <div class="row">
                            <% userproducts.forEach(product => { %>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="card card-list" style="margin-top: 80px;">
                                        <div class="row">
                                            <div class="col-4">
                                                <img class="card-img-top imageCard" src="<%= product.image_url %>"
                                                    alt="Card image" style="width:100%">
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body">
                                                    <h6 class="card-title"><%= product.name %></h6>
                                                    <p class="card-text"><%= product.description %>. <a href="">View more</a></p>
                                                    <p class="price">
                                                        <i class="fa-solid fa-tags"></i>
                                                        <%= product.base_price %>
                                                    </p>
                                                    <button class="btn btn-cart">Add to cart</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>

                            <!--search show-->
                            <% if (productSearch.length > 0) { %>
                                <% productSearch.forEach(product => { %>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="card card-list" style="margin-top: 80px;">
                                            <div class="row">
                                                <div class="col-4">
                                                    <img class="card-img-top imageCard" src="<%= product.image_url %>"
                                                        alt="Card image" style="width:100%">
                                                </div>
                                                <div class="col-8">
                                                    <div class="card-body">
                                                        <h6 class="card-title"><%= product.name %></h6>
                                                        <p class="card-text"><%= product.description %>. <a href="">View more</a></p>
                                                        <p class="price">
                                                            <i class="fa-solid fa-tags"></i>
                                                            <%= product.base_price %>
                                                        </p>
                                                        <button class="btn btn-cart">Add to cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>

                            
                        </div>
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="/product?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!--script for view-->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const listView = document.getElementById("listView");
                const gridView = document.getElementById("gridView");

                listView.style.display = "none";
                gridView.style.display = "block";
            });

            function viewBy(viewType) {
                const listView = document.getElementById("listView");
                const gridView = document.getElementById("gridView");

                if (viewType === "list") {
                    listView.style.display = "block";
                    gridView.style.display = "none";
                } else if (viewType === "grid") {
                    listView.style.display = "none";
                    gridView.style.display = "block";
                }
            }

        </script>
    </div>

